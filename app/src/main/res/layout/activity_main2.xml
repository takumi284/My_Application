<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <Button
        android:id="@+id/button_A"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ボタンA"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_B"
         />

    <Button
        android:id="@+id/button_B"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ボタンB"
        app:layout_constraintTop_toTopOf="@+id/button_A"
        app:layout_constraintStart_toEndOf="@+id/button_A"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/button7"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@+id/button8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textview_num"
        />

    <Button
        android:id="@+id/button8"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@+id/button9"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/textview_num"
        />

    <Button
        android:id="@+id/button9"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="9"
        app:layout_constraintEnd_toStartOf="@+id/button_P"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/textview_num"
        />

    <Button
        android:id="@+id/button_P"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:text="+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/textview_num"
        />

    <Button
        android:id="@+id/button4"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@+id/button5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button7"
        />

    <Button
        android:id="@+id/button5"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@+id/button6"
        app:layout_constraintStart_toEndOf="@+id/button7"
        app:layout_constraintTop_toBottomOf="@+id/button8"
        />

    <Button
        android:id="@+id/button6"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="6"
        app:layout_constraintEnd_toStartOf="@+id/button_D"
        app:layout_constraintStart_toEndOf="@+id/button8"
        app:layout_constraintTop_toBottomOf="@+id/button9"
        />

    <Button
        android:id="@+id/button_D"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="x"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button6"
        app:layout_constraintTop_toBottomOf="@+id/button_P"
        />

    <Button
        android:id="@+id/button1"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@+id/button2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        />

    <Button
        android:id="@+id/button2"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@+id/button3"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toBottomOf="@+id/button5"
        />

    <Button
        android:id="@+id/button3"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@+id/button_W"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toBottomOf="@+id/button6"
        />

    <Button
        android:id="@+id/button_W"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="÷"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button9"
        app:layout_constraintTop_toBottomOf="@+id/button_D"
        />

    <Button
        android:id="@+id/buttonAC"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="AC"
        app:layout_constraintEnd_toStartOf="@+id/button0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        />

    <Button
        android:id="@+id/button0"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="0"
        app:layout_constraintEnd_toStartOf="@+id/button_E"
        app:layout_constraintStart_toEndOf="@+id/buttonAC"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        />

    <Button
        android:id="@+id/button_E"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="="
        app:layout_constraintEnd_toStartOf="@+id/button_M"
        app:layout_constraintStart_toEndOf="@+id/button0"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        />

    <Button
        android:id="@+id/button_M"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button_E"
        app:layout_constraintTop_toBottomOf="@+id/button_W"
        />

    <TextView
        android:id="@+id/textview_visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="これは表示されている"
        app:layout_constraintTop_toBottomOf="@id/button_A"
        />
    <TextView
        android:id="@+id/textview_gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="これは最初は表示されている"
        app:layout_constraintTop_toBottomOf="@+id/textview_visible"
        />
    <TextView
        android:id="@+id/textview_invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="これも最初は表示されている"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@id/textview_gone"
        />

    <TextView
        android:id="@+id/textview_num"
        android:layout_width="345dp"
        android:layout_height="66dp"
        android:layout_marginTop="208dp"
        android:gravity="right"
        android:text="0"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>